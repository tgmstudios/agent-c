const swaggerJsdoc = require('swagger-jsdoc');

const options = {
  definition: {
    openapi: '3.0.0',
    info: {
      title: 'Agent C API Documentation',
      version: '1.0.1',
      description: 'API documentation for Agent C',
    },
    servers: [
      {
        url: 'https://agent-c.tgm.one/api/v1', // Replace with your server URL
      },
    ],
  },
  apis: ['./routes/*.js'], // Path to your route files
};

const swaggerSpec = swaggerJsdoc(options);
module.exports = swaggerSpec;
